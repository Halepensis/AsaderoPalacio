      grid-template-areas:
        'productos productos productos novedades'
        'desayunos desayunos extra      extra';
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }

    .novedades {
      grid-area: novedades;
    }
    .productos {
      grid-area: productos;
    }
    .desayunos {
      grid-area: desayunos;
    }
    .extra {
      grid-area: extra;
    }
  }

