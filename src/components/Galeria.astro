  /* sm */
  @media (min-width: 640px) {
    .galeria--title {
      font-size: var(--size-3xl);
    }
  }

  /* md */
  @media (min-width: 768px) {
    .galeria--title {
      font-size: var(--size-4xl);
      margin-bottom: var(--size-xl);
    }
  }

