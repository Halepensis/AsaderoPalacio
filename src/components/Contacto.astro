<style>
  .about {
    margin-top: var(--size-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--size-lg);
  }
  .horario {
    font-family: var(--font-secondary);
    text-align: center;
    margin-top: var(--size-lg);
  }
  .horario--title {
    font-family: var(--font-primary);
  }
  .google {
    border-radius: 6px;
    height: 200px;
    width: 200px;
  }

  /* MOBILE FIRST  */

  /* xs */
  @media (min-width: 475px) {
    .google {
      width: 400px;
      height: 200px;
    }
  }

  /* sm */
  /* @media (min-width: 640px){} */

  /* md */
  @media (min-width: 768px) {
    .horario {
      font-size: var(--size-xl);
    }

    .about {
      gap: var(--size-3xl);
    }
    .google {
      width: 600px;
      height: 400px;
    }
  }

