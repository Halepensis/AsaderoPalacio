---
import { Image } from 'astro:assets'
import Logo from '@/imagenes/logo.webp'
---

<h2 class='main__el-title'>Horario</h2>
<article class='horario__section'>
  <Image class='logo__image' src={Logo} alt='Logo de Asadero Palacio' />
  <p>De Viernes a Domingo y Festivos</p>
  <p>08:00 - 16:30</p>
  <p>
    Llamanos al <span class='telefono'>958781360</span> o <span>644474281</span>
  </p>
</article>
<style>
  .logo__image {
    width: 100%;
    max-width: 200px;
    height: auto;
  }
  .horario__section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    place-items: center;
    font-size: var(--size-2xl);
  }
  .main__el-title {
    text-align: center;
    font-family: var(--font-primary);
    font-size: var(--size-2xl);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
