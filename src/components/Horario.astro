---
import { getI18n } from '@/i18n/app'

const local = Astro.currentLocale
const i18 = getI18n(local)
---

<h2 class='main__el-title'>{i18.HORARIO__TITLE}</h2>
<article class='horario__section'>
  <img
    class='logo__image'
    src='/images/galeria/Puerta.webp'
    width='1020'
    height='574'
    alt='Logo de Asadero Palacio'
  />
  <p>{i18.HORARIO__P}</p>
  <p>08:00 - 16:30</p>
  <p>
    {i18.HORARIO__TLF}
    <span>958781360</span> o <span>644474281</span>
  </p>
</article>
<style>
  .logo__image {
    margin-top: 1rem;
    width: 100%;
    max-width: 400px;
    height: auto;
    border-radius: 6px;
  }
  .horario__section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    place-items: center;
    font-size: var(--size-2xl);
  }
  .main__el-title {
    text-align: center;
    font-family: var(--font-primary);
    font-size: var(--size-2xl);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
